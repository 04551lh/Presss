<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_pp"
    android:orientation="vertical">
    <LinearLayout
        android:background="@color/colortitle"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/im_back"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/title_to_login"
            android:text="@string/home_title"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"/>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/tv_cnt"
            android:text="CMT"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/title_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/im_menu"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/news_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pb_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <WebView
        android:layout_weight="1"
        android:id="@+id/wb_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
    </WebView>
    <LinearLayout
        android:id="@+id/ll_notNet"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_gravity="center"
            android:layout_weight="3"
            android:src="@drawable/sorry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center"
            android:text="网络异常......"
            android:textSize="@dimen/title_to_login"
            android:textColor="@color/colortitle"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
