<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/register_back"
    android:layout_height="match_parent">
    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_gravity="center"
            android:background="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_title_home_default"/>
        <EditText
            android:singleLine="true"
            android:layout_gravity="center"
            android:id="@+id/et_name"
            android:layout_weight="1"
            android:maxLines="1"
            android:maxLength="30"
            android:hint="@string/name_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/loginsuo"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <EditText
            android:singleLine="true"
            android:layout_gravity="center"
            android:id="@+id/et_pwd"
            android:inputType="textPassword"
            android:layout_weight="1"
            android:maxLines="1"
            android:maxLength="30"
            android:hint="@string/password_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/loginsuo"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <EditText
            android:singleLine="true"
            android:layout_gravity="center"
            android:id="@+id/et_repwd"
            android:inputType="textPassword"
            android:layout_weight="1"
            android:maxLines="1"
            android:maxLength="30"
            android:hint="@string/repassword_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/loginsuo"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <EditText
            android:singleLine="true"
            android:layout_gravity="center"
            android:id="@+id/et_email"
            android:inputType="textPassword"
            android:layout_weight="1"
            android:maxLines="1"
            android:maxLength="30"
            android:hint="@string/email_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:background="@drawable/normalbutton_normal"
            android:id="@+id/bt_register"
            android:text="@string/register_in"
            android:enabled="false"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="50dp" />
        <Button
            android:background="@drawable/button_backgroud"
            android:id="@+id/bt_inregister"
            android:text="@string/inregister_in"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="50dp" />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
